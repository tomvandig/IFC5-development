{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "Ifc5File.json",
    "type": "array",
    "items": {
        "anyOf": [
            {
                "$ref": "#/$defs/Prim"
            },
            {
                "$ref": "Disclaimer.json"
            }
        ]
    },
    "$defs": {
        "Prim": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "$ref": "#/$defs/ClassType"
                }
            },
            "required": [
                "name"
            ]
        },
        "ClassType": {
            "type": "string",
            "enum": [
                "UsdGeom:Mesh",
                "UsdGeom:Xform",
                "UsdGeom:BasisCurves",
                "UsdShade:Material",
                "UsdShade:Shader"
            ]
        }
    }
}