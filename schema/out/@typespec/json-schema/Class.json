{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "Class.json",
    "type": "object",
    "properties": {
        "def": {
            "type": "string",
            "const": "class"
        },
        "type": {
            "$ref": "#/$defs/ClassType"
        },
        "name": {
            "type": "string"
        },
        "children": {
            "type": "array",
            "items": {
                "$ref": "Def.json"
            }
        }
    },
    "required": [
        "def",
        "name"
    ],
    "allOf": [
        {
            "$ref": "#/$defs/Prim"
        }
    ],
    "$defs": {
        "ClassType": {
            "type": "string",
            "enum": [
                "UsdGeom:Mesh",
                "UsdGeom:Xform",
                "UsdGeom:BasisCurves",
                "UsdShade:Material",
                "UsdShade:Shader"
            ]
        },
        "Prim": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "$ref": "#/$defs/ClassType"
                }
            },
            "required": [
                "name"
            ]
        }
    }
}